<div class="modal fade bs-registrar-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
	<div class="modal-dialog" role="document">
	    <div class="modal-content modal-registrarse">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	        <h4 class="modal-title text-center" id="myModalLabel">Registrate</h4>
	      </div>
	      <div class="modal-body">

							<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
								<%= devise_error_messages! %>

								<div class="field">
									<%= f.label :Correo_electrónico %><br />
									<%= f.email_field :email, autofocus: true , placeholder: "Introduce su correo electrónico" %>
								</div>

								<div class="field">
									<%= f.label :Contraseña %>
									<% if @minimum_password_length %>
										<em>(<%= @minimum_password_length %> characters minimum)</em>
									<% end %><br />
									<%= f.password_field :password, autocomplete: "off", placeholder: "Introduce su contraseña" %>
								</div>

								<div class="field">
									<%= f.label :Confirmar_contraseña %><br />
									<%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Introduce de nuevo su contraseña" %>
								</div>

								<div class="actions">
									<%= f.submit "Enviar", class: "btn btn-primary btn-modal-sign-up" %>
									<button type="button" disabled class="btn btn-info btn-modal-facebook"><i class='fa fa-facebook-official fa-lg'></i>&nbsp;&nbsp;Accede con Facebook</button>
									<button type="button" disabled class="btn btn-info btn-modal-google"><i class='fa fa-google-plus-square fa-lg'></i>&nbsp;&nbsp;Accede con Google+</button>
								</div>
								
							<% end %>

							<%# render "devise/shared/links" %>
							<div class="modal-footer">
					        	<p class="notice"><%# notice %></p>
					        	<p class="alert"><%# alert %></p>
      						</div>
	      </div>
	    </div>
	  </div>
</div>